<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.plantsearching.MainActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_above="@+id/enjoy"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/intro_pic" />

    <TextView
        android:id="@+id/enjoy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quote"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/satoshi_bold"
        android:gravity="center_horizontal"
        android:text="Identify Plants"
        android:textColor="@color/white_black"
        android:textSize="25dp"></TextView>

    <TextView
        android:id="@+id/quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_intro1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/satoshi_medium"
        android:gravity="center"
        android:text="@string/quote"
        android:textColor="@color/my_gray_2"
        android:textSize="15dp"></TextView>

    <Button
        android:id="@+id/btn_intro1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:fontFamily="@font/satoshi_bold"
        android:text="Next"
        android:textSize="18dp"
        android:textColor="@color/my_white_5"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@color/my_green" />

</RelativeLayout>